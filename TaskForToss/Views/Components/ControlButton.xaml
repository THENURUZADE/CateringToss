<UserControl x:Class="TaskForToss.Views.Components.ControlButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskForToss.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button  Style="{StaticResource btnAdd}"></Button>
        <Button Grid.Row="1" Style="{StaticResource btnUpdate}"></Button>
        <Button Grid.Row="2" Style="{StaticResource btnReject}" ></Button>
        <Button Grid.Row="3" Style="{StaticResource btnDelete}" ></Button>
    </Grid>
</UserControl>
