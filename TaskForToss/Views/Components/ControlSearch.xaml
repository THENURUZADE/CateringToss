<UserControl x:Class="TaskForToss.Views.Components.ControlSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskForToss.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Height="60" FontSize="20" FontFamily="Times New Roman" BorderBrush="Chartreuse" BorderThickness="3" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ></TextBox>
    </Grid>
</UserControl>
