<UserControl x:Class="TaskForToss.Views.Components.ControlHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskForToss.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="30" Background="Chartreuse">
        <TextBlock Text="{Binding Header}" FontSize="20" Foreground="DarkBlue" 
                   TextAlignment="Center" FontWeight="Bold"/>
    </Grid>
</UserControl>
